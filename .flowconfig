[ignore]
# Aggressively ignore everything outside this directory
.*/D:/.*
.*/C:/Users/sarah/.claude/.*
.*/ai-centralization/.*
<PROJECT_ROOT>/\.\./\.\./\.\./\.\./.*
<PROJECT_ROOT>/\.\./\.\./\.\./[^/]*\.js
<PROJECT_ROOT>/\.\./\.\./.*
.*/node_modules/.*
.*/lib/.*
.*/src/.*
# Ignore Flow's bundled react lib (not used here; causes MixedElement error on Windows)
.*/react\.js$
.*/React\.js$
# Ignore Node.js-only test files
<PROJECT_ROOT>/test-single-llm-call\.js

[untyped]
# Don't type-check these files' SOURCE, but use libdefs if available
.*/node_modules/.*
<PROJECT_ROOT>/\.\./\.\./\.\./\.\./script\.js
<PROJECT_ROOT>/\.\./\.\./\.\./\.\./scripts/.*
<PROJECT_ROOT>/\.\./\.\./\.\./\.\./world-info\.js
.*/flowlib_.*/react\.js
.*/flowlib_.*/React\.js

[include]

[libs]
# Flow will use libdefs from this directory
flow-typed

[lints]
# Suppress warnings for missing type annotations on parameters
# We still catch actual type errors like calling booleans as functions
all=off

[options]
module.ignore_non_literal_requires=true
